<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="1.0dip" android:color="@color/LightPurpleButtonBorder" />
                    <solid android:color="@color/DarkPurpleButtonSelected" />
                </shape>
            </item>
            <item android:left="1.0dip" android:top="1.0dip">
                <shape android:shape="rectangle">
                    <solid android:color="@color/DarkPurpleButtonSelected" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="1.0dip" android:color="@color/LightPurpleButtonBorder" />
                    <solid android:color="@color/DarkPurpleButtonSelected" />
                </shape>
            </item>
            <item android:left="1.0dip" android:top="1.0dip">
                <shape android:shape="rectangle">
                    <solid android:color="@color/DarkPurpleButtonSelected" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="1.0dip" android:color="@color/LightPurpleButtonBorder" />
                    <solid android:color="@color/WPurple_v5" />
                </shape>
            </item>
            <item android:left="1.0dip" android:top="1.0dip">
                <shape android:shape="rectangle">
                    <solid android:color="@color/WPurple_v5" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>